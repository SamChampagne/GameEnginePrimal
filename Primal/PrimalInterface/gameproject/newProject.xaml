<UserControl x:Class="PrimalInterface.gameproject.newProject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrimalInterface.gameproject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Background="white">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="center" Margin="20">
            <ListBox Width="195" Height="250" />
            <Border Width="400" Height=" 250" Margin="5,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="center" Margin="0,30,0,0">
            <TextBlock Text="Name" Width="50"></TextBlock>
            <TextBox Width="550" x:Name="InputName"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="center" Margin="0,30,0,0">
            <TextBlock Text="Path" Width="50"></TextBlock>
            <TextBox Width="500" x:Name="InputPath"/>
            <Button Content="..." Width="45" Margin="5,0,0,0" ></Button>
        </StackPanel>
    </StackPanel>

</UserControl>
